    $('#image1').change(function (event) {
      var files = event.target.files;

      var done = function (url) {
        image1.src = url;
        modal1.modal('show');
      };

      if (files && files.length > 0) {
        reader = new FileReader();
        reader.onload = function (event) {
          done(reader.result);
        };

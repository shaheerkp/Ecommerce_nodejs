<script>
    let fname_val = false;


    document.getElementById("category").onchange = e => {
        let id = e.target.value
        // document.getElementById('sub-div').style.display = "block";


        console.log("id" + id)
        $.ajax({
            url: "/admin/get-subcategory",
            method: 'POST',
            data: { id },
            success: function (response) {
                console.log(response);
                document.getElementById("myList").innerHTML = "";
                for (let i = 0; i < response.data.length; i++) {
                    var innerCode = `<tr><td><input class='form-control' id="inp${i}" value='${response.data[i].name}'/></td><td>
